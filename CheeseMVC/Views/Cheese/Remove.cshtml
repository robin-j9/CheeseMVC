@{
}

<h1>Remove Cheese</h1>

<form method="post">
    @foreach (string cheese in ViewBag.cheeseList.Keys)
    {
        <label>
            <input type="checkbox" name="cheeseSelection" value="@cheese" />
            @cheese
        </label><br />
    }
    <input type="submit" value="Remove" />
</form>